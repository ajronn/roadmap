{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "main/*": [
                "src/components/main/*"
            ],
            "core": [
                "src/components/core"
            ],
            "shared": [
                "src/components/shared"
            ],
            "ui": [
                "src/components/ui"
            ],
            "firebase/*": [
                "src/firebase/*"
            ],
            "images/*": [
                "src/components/ui/images/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}